<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CyberQuize" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CyberQuize" parent="Base.Theme.CyberQuize" />


    <style name="ThemeOnboarding" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>


    <style name="ThemeCyberNewsView" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="colorPrimary">@color/purple</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/purple</item>
    <item name="colorPrimaryVariant">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" >?attr/colorPrimary</item>

    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">20%</item>
    </style>

    <style name="RoundedSquareSec">
        <item name="cornerSize">14%</item>
    </style>

    <style name="RoundedCircul">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>